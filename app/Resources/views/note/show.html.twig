{% extends 'base.html.twig' %}

{% block body %}
    <h1>Your Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Note #:</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Subject:</th>
                <td>{{ note.noteSubject }}</td>
            </tr>
            <tr>
                <th>Body:</th>
                <td>{{ note.noteBody }}</td>
            </tr>
            <tr>
                <th>Author:</th>
                <td>{{ note.noteAuthor }}</td>
            </tr>
            <tr>
                <th>Count: </th>
                <td>{{ note.noteBodyCharCount }}</td>
            </tr>
            <tr>
                <th>Created:</th>
                <td>{% if note.noteDateTime %}{{ note.noteDateTime|date('l, F jS Y H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

            {{ form_start(delete_form) }}
                <br>
                <input type="submit" class="btn btn-default" value="Delete Page">
            {{ form_end(delete_form) }}

                <br>

            <a href="{{ path('note_edit', { 'id': note.id }) }}" class="btn btn-default">Edit Page</a>
                <br><br>
            <a href="{{ path('note_index') }}" class="btn btn-default">Back to Notebook</a>

{% endblock %}
