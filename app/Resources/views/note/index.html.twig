{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Notesubject</th>
                <th>Notebody</th>
                <th>Noteauthor</th>
                <th>Notebodycharcount</th>
                <th>Notedatetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('note_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.noteSubject }}</td>
                <td>{{ note.noteBody }}</td>
                <td>{{ note.noteAuthor }}</td>
                <td>{{ note.noteBodyCharCount }}</td>
                <td>{% if note.noteDateTime %}{{ note.noteDateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('note_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('note_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('note_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
